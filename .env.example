# ============================================================================
# Deepiri Platform - Production Environment Configuration
# ============================================================================
# IMPORTANT: Copy this file to .env and fill in ALL required values.
# DO NOT commit the .env file to version control.
#
# Generate secure passwords with:
#   openssl rand -base64 32
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
# ============================================================================

# --- Environment ---
NODE_ENV=production

# --- PostgreSQL ---
POSTGRES_USER=deepiri
POSTGRES_PASSWORD=                    # REQUIRED: openssl rand -base64 32
POSTGRES_DB=deepiri

# --- MongoDB ---
MONGO_ROOT_USER=                      # REQUIRED: e.g. deepiri_admin
MONGO_ROOT_PASSWORD=                  # REQUIRED: openssl rand -base64 32
MONGO_DB=deepiri

# --- Redis ---
REDIS_PASSWORD=                       # REQUIRED: openssl rand -base64 32

# --- MinIO (Object Storage) ---
MINIO_ROOT_USER=                      # REQUIRED: openssl rand -base64 16
MINIO_ROOT_PASSWORD=                  # REQUIRED: openssl rand -base64 32
MINIO_ACCESS_KEY=                     # REQUIRED: same as MINIO_ROOT_USER
MINIO_SECRET_KEY=                     # REQUIRED: same as MINIO_ROOT_PASSWORD

# --- InfluxDB ---
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=                    # REQUIRED: openssl rand -base64 32
INFLUXDB_ORG=deepiri
INFLUXDB_BUCKET=analytics
INFLUXDB_TOKEN=                       # REQUIRED: openssl rand -base64 48

# --- JWT ---
JWT_SECRET=                           # REQUIRED: openssl rand -base64 48

# --- Grafana ---
GRAFANA_ADMIN_PASSWORD=               # REQUIRED: openssl rand -base64 24

# --- Cyrex API ---
CYREX_API_KEY=change-me               # Default for local dev, change for production

# --- External APIs (optional) ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# --- Frontend ---
CORS_ORIGIN=http://localhost:5173
CLIENT_URL=http://localhost:3000
