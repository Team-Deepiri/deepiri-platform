apiVersion: v1
kind: Secret
metadata:
  name: deepiri-secrets
  namespace: default
type: Opaque
stringData:
  # JWT & Session Secrets
  JWT_SECRET: "your-super-secret-jwt-key-minimum-32-characters-long-change-in-production"
  SESSION_SECRET: "your-session-secret-key-here-change-in-production"
  JWT_EXPIRES_IN: "7d"
  REFRESH_TOKEN_TTL_DAYS: "30"
  
  # Database Credentials
  MONGO_ROOT_USER: "admin"
  MONGO_ROOT_PASSWORD: "password"  # Change for production
  MONGO_DB: "deepiri"
  MONGODB_URI: "mongodb://admin:password@mongodb-service:27017/deepiri?authSource=admin"
  
  # Redis Configuration
  REDIS_PASSWORD: "redispassword"  # Change for production
  REDIS_URL: "redis://:redispassword@redis-service:6379"
  REDIS_HOST: "redis-service"
  REDIS_PORT: "6379"
  
  # AI API Keys (Optional for local dev - can be empty if using LocalAI)
  OPENAI_API_KEY: ""  # Leave empty for LocalAI, or set your OpenAI key
  LOCALAI_API_KEY: ""  # Optional: set if LocalAI requires API key
  DEEPINFRA_API_KEY: ""  # Optional: for DeepInfra alternative
  
  # Python Agent API Key
  PYAGENT_API_KEY: "change-me"  # Change this to a secure value
  CYREX_API_KEY: "change-me"  # Alias for PYAGENT_API_KEY
  
  # Firebase Configuration (Optional for local dev)
  FIREBASE_PROJECT_ID: ""
  FIREBASE_PRIVATE_KEY_ID: ""
  FIREBASE_PRIVATE_KEY: ""
  FIREBASE_CLIENT_EMAIL: ""
  FIREBASE_CLIENT_ID: ""
  FIREBASE_DATABASE_URL: ""
  
  # External API Keys (Optional for local dev)
  GOOGLE_MAPS_API_KEY: ""
  GOOGLE_PLACES_API_KEY: ""
  OPENWEATHER_API_KEY: ""
  EVENTBRITE_API_KEY: ""
  YELP_API_KEY: ""
  
  # Notification Services (Optional for local dev)
  FCM_SERVER_KEY: ""
  TWILIO_ACCOUNT_SID: ""
  TWILIO_AUTH_TOKEN: ""
  TWILIO_PHONE_NUMBER: ""
  SENDGRID_API_KEY: ""
  SENDGRID_FROM_EMAIL: ""
  
  # Payment Processing (Optional for local dev)
  STRIPE_SECRET_KEY: ""
  STRIPE_WEBHOOK_SECRET: ""
  PAYPAL_CLIENT_SECRET: ""
  PAYPAL_MODE: "sandbox"
  
  # InfluxDB Token
  INFLUXDB_TOKEN: "your-influxdb-token"
  
  # Vector Database Keys
  PINECONE_API_KEY: ""
  WEAVIATE_URL: ""
  WEAVIATE_API_KEY: ""
  
  # WandB for ML Experiment Tracking
  WANDB_API_KEY: ""

